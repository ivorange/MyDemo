<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_demo"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:visibility="gone">
        </ListView>

        <TextView
            android:id="@+id/text_method"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:text="How to use Textview Method,How to use Textview Method,How to use Textview Method"/>
        
        <co.example.ivorange.newproject.CheckView
            android:layout_width="200dp"
            tools:isshowicon="true"
            android:id="@+id/check_view"
            android:layout_height="100dp"/>
    </LinearLayout>

</FrameLayout>
